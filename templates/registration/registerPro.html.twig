{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div style='text-align: center'>

    <h1>Inscription Pro</h1>
    <ul>
    {{ form_start(registrationForm) }}
    
        {{form_row(registrationForm.nom)}}
        {{form_row(registrationForm.prenom)}}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}
        {{form_row(registrationForm.confirmPassword)}}
        
        {{form_row(registrationForm.societyName)}}
        {{form_row(registrationForm.siret)}}
        {{form_row(registrationForm.ville)}}

        <button type="submit" class="btn btn-success">S'inscrire</button>
    </ul>
    {{ form_end(registrationForm) }}
        <a href="/register"><input type="button" class="btn btn-primary" value="S'incrire en tant que particulier"></a>
    </div>
      {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <label>Vous avez d√©ja un compte ? Connecter vous </label>
    <button><a href ="{{ path('app_login') }}"><ion-icon name="folder-outline"></ion-icon></a></button>
{% endblock %}
